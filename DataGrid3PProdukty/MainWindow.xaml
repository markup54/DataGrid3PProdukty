<Window x:Class="DataGrid3PProdukty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGrid3PProdukty"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="gridProdukty"
                  CanUserAddRows="True"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  AlternatingRowBackground="Cyan"
                  AlternationCount="3"
                  GridLinesVisibility="None">
            <!-- domyślnie kolorowanie co drugi wiersz-->
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Nazwa"
                    Binding="{Binding Nazwa}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
